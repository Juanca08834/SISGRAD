@startuml
skinparam componentStyle rectangle

package "Project Service" {
  [ProjectController] --> [ProjectService]
  [ProjectService] --> [ProjectRepository]
  [ProjectService] --> [FormatAVersionRepository]
  [ProjectService] --> [EventPublisher]
}

package "Evaluation Service" {
  [EvaluationController] --> [EvaluationService]
  [EvaluationService] --> [EvaluationRepository]
  [EvaluationService] --> [EvaluationTemplate]
  [FormatAEvaluationProcess] ..|> [EvaluationTemplate]
  [EvaluationService] --> [EventPublisher]
}

package "Identity Service" {
  [AuthController] --> [TeacherService]
  [TeacherService] --> [TeacherRepository]
  [TeacherService] --> [PasswordValidator]
  [TeacherService] --> [JwtService]
}

package "Notification Service" {
  [NotificationController] --> [NotificationFacade]
  [NotificationFacade] --> [EmailSender]
  [LoggerEmailSender] ..|> [EmailSender]
}

@enduml